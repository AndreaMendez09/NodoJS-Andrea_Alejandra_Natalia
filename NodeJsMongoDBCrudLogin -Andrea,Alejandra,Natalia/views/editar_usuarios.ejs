<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-body">
                    <form action="/usuarios/editar_usuarios/<%= usuarios._id %>" method="post">
                        <div class="form-group">
                            <input class="form-control" type="text" name="nombre" placeholder="Nombre" value="<%= usuarios.nombre %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="apellidos" placeholder="Apellidos" value="<%= usuarios.apellidos %>">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="correo" placeholder="Correo" value="<%= usuarios.correo %>">
                        </div>
                        <div>
                            <select name="rol">
                                <option>Administrador</option>
                                <option>Profesor</option>
                                <option>Alumno</option>
                            </select>
                        </div>
                        <button class="btn btn-primary" type="submit">AÃ±adir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>